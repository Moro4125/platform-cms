<?xml version="1.0" encoding="utf-8"?>
{#<!--suppress HtmlUnknownTag, Annotator -->#}
<rss version="2.0">
	<channel>
		<title>{{ title }}</title>
		<link>http://{{ app.request.host }}/</link>
		<description>This RSS feed generated by Platform CMS</description>
		<language>ru</language>
		<pubDate>{{ published|date(rfc822) }}</pubDate>
		<lastBuildDate>{{ published|date(rfc822) }}</lastBuildDate>
		<docs>http://blogs.law.harvard.edu/tech/rss</docs>
		<generator>Site http://{{ app.request.host }}</generator>
		<managingEditor>{{ app.options.org_email }}</managingEditor>
		<webMaster>{{ app.options.org_email }}</webMaster>

		{%- for item in list %}

		<item>
			<title>{{ item.name }}</title>
			<link> {{- app.url(routeUpdate, {id: item.id}) -}} </link>
			<pubDate>{{ item.updatedAt|date(rfc822) }}</pubDate>
			{% if item.updatedBy -%}
				<description><![CDATA[{% spaceless %}
					<address>Updated by {{ item.updatedBy }} at {{ item.updatedAt|date(rfc822) }}</address>
					{{- item.getDescription()|raw -}}
				{% endspaceless %}]]></description>
			{%- endif %}

			<guid> {{- app.url(routeUpdate, {id: item.id}) }}#{{ item.updatedAt -}} </guid>
		</item>

		{%- endfor %}

	</channel>
</rss>