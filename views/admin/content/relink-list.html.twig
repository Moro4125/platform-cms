{% extends "@PlatformCMS/admin/content/_list.html.twig" %}


{% block workarea %}
	{% set updateUrl = url("admin-content-relink-update", {id: 777}) %}
	{% set cloneUrl  = url("admin-content-relink-clone",  {id: 777}) %}
	{% set deleteUrl = url("admin-content-relink-delete", {ids: 777}) %}
	{% set tgStarUrl = url("admin-content-relink-star", {id: 777}) %}
	{{ parent() }}
{% endblock %}


{% block list_column_name__info %}
	<span class="glyphicon glyphicon-link"></span>
	{{- " " -}}
	{{- item.name -}}
	{%- if item.href -%}
		<small class="text-muted">  ●  {{ item.href }}</small>
	{%- endif -%}
	{%- if item.parameters.title|default(false) and item.parameters.title != item.name -%}
		<small class="text-muted">  ●  {{ item.parameters.title }}</small>
	{%- endif -%}
{% endblock %}
