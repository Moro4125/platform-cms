{% extends '@PlatformCMS/forms/fields.html.twig' %}

{% block _form_commit_widget %}
	{% set attr = attr|merge({ class: "btn btn-success"}) %}
	<button type="{{ type|default('submit') }}" {{ block('button_attributes') }}>
		<span class="glyphicon glyphicon-ok" aria-hidden="true"></span> {{ label|trans({}, translation_domain) -}}
	</button>
{% endblock %}

