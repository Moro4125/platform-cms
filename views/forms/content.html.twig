{% block checkbox_widget %}
	<label>
		<input type="checkbox" class="sr-only" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
		<span class="glyphicon glyphicon-check"></span>
		<span class="glyphicon glyphicon-unchecked"></span>
		{% if label %}<span class="fix-font-weight-1"> {{ label|trans }}</span>{% endif %}
	</label>
{% endblock %}

